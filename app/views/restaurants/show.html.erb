<h1> <%=@restaurant.name%> </h1>
<h4>Adress <%=@restaurant.address%> </h4>
<h4> Phone <%=@restaurant.phone_number%> </h4>
<h4> Category <%=@restaurant.category%> </h4>
<br>
<h4> Reviews </h4>

<% @reviews.each do |review|%>
<ul>
<h5> Review Content:<%=review.content%></h5>
<h5> Review Rating:<%= review.rating%></h5>

</ul>
<%end%>

<br>
<h4> Add review </h4>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit :class => "btn btn-success btn-mini" %>
<% end %>
<br>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %>
